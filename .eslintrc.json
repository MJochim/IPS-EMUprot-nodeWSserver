{
    "env": {
        "es6": true,
	    "jasmine": true,
        "node": true
    },
    "extends": [
	    "eslint:recommended",
	    "plugin:jasmine/recommended"
    ],
	"plugins": [
		"jasmine"
	],
    "rules": {
        "indent": [
            "error",
            "tab",
			{
				"SwitchCase": 1
			}
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
		"no-fallthrough": [
			"error",
			{
				"commentPattern": "(^$)|(falls?\\s?through)"
			}
		]
    }
}
